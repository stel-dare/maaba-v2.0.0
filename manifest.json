{
  "name": "maaba",
  "version": "2.0",
  "description": "An in-house chrome extension that auto records colleagues' attendance to work.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["notifications","storage","declarativeContent"],
  "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
  "manifest_version": 2
}
